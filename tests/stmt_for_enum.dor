/*
 * stmt_for_enum.dor
 * for each / in / exit / loop / descend examples
 *
 */

procedure main()

   local aItems, aChars, cItem, cChar

   aItems := { "one", "two", "three" }
   aChars := { "a", "b", "c", "d" }

   printf( "=== BASIC FOR EACH ===" )
   for each cItem in aItems
      printf( cItem )

      if cItem = "two"
         loop
      endif

      if cItem = "three"
         exit
      endif
   endfor

   printf( "=== MULTI-VAR FOR EACH ===" )
   for each cItem, cChar in aItems, aChars
      printf( cItem )
      printf( cChar )
   endfor

   printf( "=== DESCEND FOR EACH ===" )
   for each cItem in aItems descend
      printf( cItem )
   endfor

return
